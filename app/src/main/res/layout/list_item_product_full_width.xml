<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/list_item_wide_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/list_item_wide_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/list_item_wide_image"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/list_item_wide_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/list_item_wide_name_textview"
        app:layout_constraintTop_toBottomOf="@id/list_item_wide_name_textview"
        />

    <TextView
        android:id="@+id/list_item_wide_brand_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/list_item_wide_name_textview"
        app:layout_constraintTop_toBottomOf="@id/list_item_wide_price_textview"
        />

    <TextView
        android:id="@+id/list_item_wide_category_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/list_item_wide_name_textview"
        app:layout_constraintTop_toBottomOf="@id/list_item_wide_brand_textview"
        />
</androidx.constraintlayout.widget.ConstraintLayout>